<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1700"
        motion:autoTransition="animateToEnd">

       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/backgroundLayout"
               motion:framePosition="0"
               android:scaleX="0.7" />
           <KeyAttribute
               motion:motionTarget="@+id/backgroundLayout"
               motion:framePosition="0"
               android:scaleY="0.7" />
           <KeyAttribute
               motion:motionTarget="@+id/backgroundLayout"
               motion:framePosition="25"
               android:scaleX="1" />
           <KeyAttribute
               motion:motionTarget="@+id/backgroundLayout"
               motion:framePosition="25"
               android:scaleY="1" />
           <KeyAttribute
               motion:motionTarget="@+id/backgroundLayout"
               motion:framePosition="50"
               android:scaleX="2" />
           <KeyAttribute
               motion:motionTarget="@+id/backgroundLayout"
               motion:framePosition="50"
               android:scaleY="2" />
           <KeyAttribute
               motion:motionTarget="@+id/backgroundLayout"
               motion:framePosition="75"
               android:scaleX="4" />
           <KeyAttribute
               motion:motionTarget="@+id/backgroundLayout"
               motion:framePosition="75"
               android:scaleY="4" />
           <KeyAttribute
               motion:motionTarget="@+id/backgroundLayout"
               motion:framePosition="100"
               android:scaleX="10" />
           <KeyAttribute
               motion:motionTarget="@+id/backgroundLayout"
               motion:framePosition="100"
               android:scaleY="10" />

       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/image"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="110dp"
            android:layout_height="110dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="10dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:scaleX="0"
            android:scaleY="0" />
        <Constraint
            android:layout_height="70dp"
            android:layout_width="70dp"
            android:id="@+id/img_symbol"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.882"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.396" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/txt_from"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.193"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintHorizontal_bias="0.501" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/txt_Meta"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_editor_absoluteY="707dp"
            motion:layout_editor_absoluteX="249dp" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/Meta"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.866"
            motion:layout_constraintHorizontal_bias="0.599" />
        <Constraint
            android:id="@+id/Image"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="110dp"
            android:layout_height="110dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.45"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:scaleX="0"
            android:scaleY="0" />
        <Constraint
            android:id="@+id/Image"
            android:scaleX="0"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="110dp"
            android:layout_height="110dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.45"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:scaleY="0" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/image"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="110dp"
            android:layout_height="110dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="10dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:scaleX="1"
            android:scaleY="1" />
        <Constraint
            android:id="@+id/Image"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="110dp"
            android:layout_height="110dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.45"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:scaleX="1"
            android:scaleY="1" />
    </ConstraintSet>
</MotionScene>