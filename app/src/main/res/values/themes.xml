<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Task3_LoginPage" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/black</item>
         <item name="colorPrimaryDark">@color/white</item>
         <item name="colorAccent">@color/blue</item>
    </style>

    <style name="Theme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/blue</item>
        <item name="android:colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>

    </style>

    <style name="MyTheme" parent="TextAppearance.AppCompat">

        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="MyTheme2" parent="Theme.AppCompat.DayNight.DarkActionBar">

        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/white</item>

    </style>

    <style name="FullScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>


    </style>

    <style name="Theme.Task3_LoginPage" parent="Base.Theme.Task3_LoginPage" />
</resources>