<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".TextToSpeechActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Text To Speech"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/headliner"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_text_to_speech_enter_text"
        android:hint="Enter Your Text"
        android:textColorHint="@color/white3"
        android:textColor="@color/white"
        android:background="@drawable/et_bg_shape"
        android:padding="60dp"
        android:layout_margin="16dp"
        android:gravity="center"
        android:fontFamily="@font/napolean"
        android:textSize="18dp"
        android:inputType="textMultiLine"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose the Pitch"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:fontFamily="@font/napolean"
        android:layout_margin="16dp"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sb_text_to_speech_pitch"
        android:max="100"
        android:min="0"
        android:progress="50"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose the Speed"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:fontFamily="@font/napolean"
        android:layout_margin="16dp"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sb_text_to_speech_speed"
        android:max="100"
        android:min="0"
        android:progress="50"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_text_to_speech_speak"
        android:text="Speak"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

</LinearLayout>